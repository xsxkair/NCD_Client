<AnchorPane prefHeight="765.0" prefWidth="1240.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane style="-fx-border-color: grey; -fx-border-width: 1;" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label style="-fx-background-color: #F4F4F4;" text=" 报告筛选 " translateY="-10.0" StackPane.alignment="TOP_LEFT">
               <StackPane.margin>
                  <Insets left="20.0" />
               </StackPane.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <FlowPane fx:id="GB_FilterFlowPane" hgap="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="测试项目：" />
                        <TextField fx:id="GB_TestItemFilterTextfield" prefWidth="100.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="测试时间：" />
                        <DatePicker fx:id="GB_TestTimeFilterDateChoose" prefWidth="120.0" promptText="YYYY-MM-DD" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="测试人员：" />
                        <TextField fx:id="GB_TesterFilterTextfield" prefWidth="100.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="测试设备：" />
                        <ComboBox fx:id="GB_TestDeviceFilterCombox" prefWidth="140.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="测试样本：" />
                        <TextField fx:id="GB_TestSampleFilterTextField" prefWidth="100.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="报告结果：" />
                        <ComboBox fx:id="GB_ReportResultFilterCombox" prefWidth="100.0" />
                     </children>
                  </HBox>
                  <StackPane fx:id="refreshToggleNode" prefHeight="25.0" prefWidth="25.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <FlowPane.margin>
                        <Insets left="20.0" />
                     </FlowPane.margin>
                  </StackPane>
               </children>
               <StackPane.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </StackPane.margin>
            </FlowPane>
         </children>
      </StackPane>
      <TableView fx:id="GB_TableView" editable="true" prefHeight="200.0" prefWidth="200.0" styleClass="edge-to-edge" AnchorPane.bottomAnchor="55.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
        <columns>
          <TableColumn fx:id="TableColumn1" prefWidth="50.0" text="索引" />
            <TableColumn fx:id="TableColumn2" prefWidth="100.0" text="项目名称" />
            <TableColumn fx:id="TableColumn3" prefWidth="100.0" text="检测时间" />
            <TableColumn fx:id="TableColumn4" prefWidth="75.0" text="结       果" />
            <TableColumn fx:id="TableColumn5" prefWidth="117.0" text="操作人" />
            <TableColumn fx:id="TableColumn6" prefWidth="158.0" text="设备编号" />
            <TableColumn fx:id="TableColumn7" prefWidth="75.0" text="样品编号" />
            <TableColumn fx:id="TableColumn8" prefWidth="75.0" text="报告结果" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Pagination fx:id="GB_Pagination" maxPageIndicatorCount="20" styleClass="bullet" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
      <VBox fx:id="GB_FreshPane" alignment="CENTER" layoutX="20.0" layoutY="20.0" spacing="10.0" style="-fx-background-color: rgba(0, 0, 0, 0.2);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXSpinner startingAngle="0.0" style="-fx-radius: 50;" />
            <Label text="正在加载数据，请稍后" />
         </children>
         <cursor>
            <Cursor fx:constant="WAIT" />
         </cursor>
      </VBox>
   </children>
</AnchorPane>
